{
  "manifest_version": 3,
  "name": "Unity Asset Store Price Tracker",
  "version": "1.0.1",
  "description": "This extension lets you view pricing history for Unity assets on site",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Unity Asset Store Price Tracker",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://assetstore.unity.com/packages/*"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "host_permissions": [
    "https://assetstore.unity.com/packages/*",
    "https://www.despair.services/*"
  ]
}